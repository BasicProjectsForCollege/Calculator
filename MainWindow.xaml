<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0.1"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value=" 50"/>
        </Style>
    </Window.Resources>


    <Grid>
        <!--Arthematic Functions -->
        <Button Tag="101" x:Name="equal" Content="=" HorizontalAlignment="Left" Margin="540,415,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>
        <Button Tag="103" x:Name="add" Content="+" HorizontalAlignment="Left" Margin="540,365,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>
        <Button Tag="102" x:Name="sub" Content="-" HorizontalAlignment="Left" Margin="540,315,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>
        <Button Tag="104" x:Name="mul" Content="*" HorizontalAlignment="Left" Margin="540,265,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>
        <Button Tag="105" x:Name="div" Content="/" HorizontalAlignment="Left" Margin="540,215,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>
        <Button Tag="106" x:Name="per" Content="%" HorizontalAlignment="Left" Margin="490,215,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>

        <Button Tag="107" x:Name="bracket" Content="()" HorizontalAlignment="Left" Margin="440,215,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button Tag="108" x:Name="clr" Content="Clr" HorizontalAlignment="Left" Margin="390,215,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>
        <Button Tag="109" x:Name="fact" Content="x!" HorizontalAlignment="Left" Margin="340,415,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Arthermatic_op"/>
        <!--Numbers-->
        <Button Tag="9" x:Name="num9" Content="9" HorizontalAlignment="Left" Margin="490,265,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="6" x:Name="num6" Content="6" HorizontalAlignment="Left" Margin="490,315,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="3" x:Name="num3" Content="3" HorizontalAlignment="Left" Margin="490,365,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="8" x:Name="num8" Content="8" HorizontalAlignment="Left" Margin="440,265,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="5" x:Name="num5" Content="5" HorizontalAlignment="Left" Margin="440,315,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="2" x:Name="num2" Content="2" HorizontalAlignment="Left" Margin="440,365,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="7" x:Name="num7" Content="7" HorizontalAlignment="Left" Margin="390,265,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="4" x:Name="num4" Content="4" HorizontalAlignment="Left" Margin="390,315,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="1" x:Name="num1" Content="1" HorizontalAlignment="Left" Margin="390,365,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="0" x:Name="num0" Content="0" HorizontalAlignment="Left" Margin="440,415,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <!--Extra Arthematic-->
        <Button Tag="10" Content="+/-" HorizontalAlignment="Left" Margin="390,415,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        <Button Tag="11" x:Name="dot" Content="." HorizontalAlignment="Left" Margin="490,415,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_digits"/>
        
        <!--Trignometric-->
        <Button Tag="sin" x:Name="sine" Content="sin" HorizontalAlignment="Left" Margin="340,265,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Print_Trig"/>
        
        <TextBox x:Name="textbox1" HorizontalAlignment="Left" Height="200" TextWrapping="Wrap" Text="" VerticalAlignment="Top" 
                 Width="500" FontSize="50" TextAlignment="Right" VerticalContentAlignment="Bottom"
                 BorderThickness="0.1" Margin="80,5,0,0" >

        </TextBox>
        <Line X1="0" Y1="-27" X2="600" Y2="-27" VerticalAlignment="Center" Stroke="Black" StrokeThickness="1" ></Line>

    </Grid>

</Window>
